    <style name="Base.Theme.CaloriTrack" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/green_50</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/green_50</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>

    <style name="fab_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
